
{% include 'layout/header.html.twig' %}
{% include 'layout/nav-sidebar.html.twig' %}

<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">Producto</h4>
                    </div>
                    <a href="new" class="btn btn-primary add-list">
                        <i class="las la-plus mr-3"></i>Nuevo usuario
                    </a>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="table-responsive mb-3">
                    <table class="table mb-0 tbl-server-info no-footer" role="grid">
                        <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data" role="row">
                            <th class="text-left">Id</th>
                            <th class="text-left">Activo</th>
                            <th class="text-left">Nombre de Usuario</th>
                            <th class="text-left">Fecha de creación</th>
                            <th class="text-left">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.active ? 'Sí' : 'No' }}</td>
                                <td>{{ user.username }}</td>
                                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a style="padding: 5px" href="{{ path('users_show', {'id': user.id}) }}">Ver</a>
                                    <a style="padding: 5px" href="{{ path('users_edit', {'id': user.id}) }}">Editar</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">No hay usuarios que mostrar</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% include 'layout/footer.html.twig' %}