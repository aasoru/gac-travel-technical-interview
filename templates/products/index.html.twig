
{% include 'layout/header.html.twig' %}
{% include 'layout/nav-sidebar.html.twig' %}

<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">Productos</h4>
                    </div>
                    <a href="new" class="btn btn-primary add-list">
                        <i class="las la-plus mr-3"></i>Nuevo producto
                    </a>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="table-responsive mb-3">
                    <table class="table mb-0 tbl-server-info no-footer" role="grid">
                        <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data" role="row">
                            <th class="text-left">Id</th>
                            <th class="text-left">Nombre</th>
                            <th class="text-left">Categoría</th>
                            <th class="text-center">Stock</th>
                            <th class="text-center">Fecha de Creación</th>
                            <th class="text-right">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.id }}</td>
                                <td>{{ product.name }}</td>
                                <td>{{ product.category.name }}</td>
                                <td>{{ product.stock }}</td>
                                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a style="padding: 5px" href="{{ path('products_edit', {'id': product.id}) }}">Editar</a>
                                    <a style="padding: 5px" href="{{ path('products_modify_stock', {'id': product.id}) }}">Modificar Stock</a>
                                    <a style="padding: 5px" href="{{ path('products_historic', {'id': product.id}) }}">Histórico</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">No hay productos que mostrar</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% include 'layout/footer.html.twig' %}